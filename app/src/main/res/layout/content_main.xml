<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/view"
        android:layout_centerVertical="true"
        android:background="#d52424"
        android:layout_width="wrap_content"
        android:layout_height="200dip">

        <Button
            android:id="@+id/btn_move_x"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x轴移动"/>

        <Button
            android:id="@+id/btn_move_y"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="y轴移动"/>

        <Button
            android:id="@+id/btn_move_all"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全屏移动"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_show_data"
            android:background="#c58686"
            android:layout_width="100dip"
            android:layout_height="40dip"
            android:textSize="20sp"
            android:gravity="center"/>

        <Button
            android:id="@+id/btn_get_now_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取当前时间"/>

        <Button
            android:id="@+id/btn_get_now_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取这个月第几天"/>
    </LinearLayout>

</RelativeLayout>
